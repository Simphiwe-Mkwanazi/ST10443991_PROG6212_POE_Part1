@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Claims";
}
<h2>Claims</h2>
<table class="grid">
    <thead>
        <tr><th>Claim Id</th><th>Period</th><th>Status</th><th>Total Hours</th><th>Amount</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.ClaimId</td>
                <td>@c.Period</td>
                <td><span class="badge">@c.Status</span></td>
                <td>@c.TotalHours</td>
                <td>@c.Amount</td>
                <td><a class="btn btn-small" href="/Claims/Detail/@c.ClaimId">Open</a></td>
            </tr>
        }
    </tbody>
</table>
